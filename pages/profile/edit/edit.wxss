/* pages/profile/edit/edit.wxss */
.edit-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.edit-form {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.item-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.avatar-wrapper {
  width: 100%;
  background: none;
  padding: 0;
  margin: 0;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.change-button {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #999;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.input {
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.save-btn {
  margin-top: 40rpx;
  background: #4080FF;
  color: #fff;
  border-radius: 8rpx;
}