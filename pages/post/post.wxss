.post-container {
  background: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  background: #fff;
  height: 88rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-icon {
  width: 88rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon image {
  width: 36rpx;
  height: 36rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  text-align: center;
  
}

.publish-button {
  background: #6252ee;
  color: #fff;
  font-size: 30rpx;
  padding: 0 16rpx;  
  border-radius: 8rpx;
  line-height: 60rpx;
  height: 60rpx;
  max-width: 120rpx;     
  margin-left: auto; 
  font-weight: normal;
  text-align: center;
}

/* 表单区域 */
.post-form {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  gap: 24rpx;
}

.input-box {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.03);
}

.title-input {
  width: 100%;
  font-size: 32rpx;
  color: #333;
}

.content-input {
  width: 100%;
  min-height: 300rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

/* 编辑工具栏 */
.editor-toolbar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.03);
}

.toolbar-item {
  margin-right: 40rpx;
  color: #666;
  font-size: 30rpx;
  font-weight: 500;
}

.toolbar-item.bold {
  font-weight: bold;
}

.toolbar-item.italic {
  font-style: italic;
}

.toolbar-item image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.wiki-button {
  background: #f0f0f0;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  margin-left: auto;
  display: flex;
  align-items: center;
}

.wiki-button image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.wiki-button text {
  font-size: 26rpx;
  color: #999;
}

.wiki-button.active {
  background: #f0f0ff;
}

.wiki-button.active text {
  color: #6252ee;
}

/* 话题区域 */
.topic-section {
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.03);
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.topic-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.topic-tag {
  background: #f7f7f7;
  color: #666;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
}

.add-topic {
  color: #6252ee;
  background: #f0f0ff;
}

/* Wiki卡片 */
.wiki-card {
  background: #f8f4ff;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.03);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* Wiki建议区域 */
.wiki-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.wiki-title {
  display: flex;
  align-items: center;
}

.wiki-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.apply-btn {
  color: #6252ee;
  font-size: 28rpx;
  background: rgba(98, 82, 238, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

.wiki-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  background: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.wiki-divider {
  height: 1rpx;
  background: rgba(98, 82, 238, 0.2);
  margin: 20rpx 0;
}

/* 文风选择 */
.style-section {
  padding-top: 10rpx;
}

.style-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.style-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.style-option {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #fff;
}

.style-option.active {
  background: #6252ee;
  color: #fff;
}

/* 底部区域 */
.post-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  z-index: 100;
}

.visibility-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.visibility-option-pill {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
}

.visibility-option-pill.active {
  background: #e8e5ff;
}

.visibility-option-pill image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  opacity: 0.7;
}

.visibility-option-pill.active image {
  opacity: 1;
}

.visibility-option-pill text {
  font-size: 26rpx;
  color: #666;
}

.visibility-option-pill.active text {
  color: #6252ee;
}

.wiki-switch {
  display: flex;
  align-items: center;
}

.wiki-switch image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.wiki-switch text {
  font-size: 26rpx;
  color: #666;
}

.wiki-switch switch {
  transform: scale(0.7);
  margin-left: 8rpx;
} 