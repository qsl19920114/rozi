/* 通用样式 */
page {
  background-color: #fff;
  font-size: 14px;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  align-items: center;
  margin: 20rpx;
  padding: 15rpx 30rpx;
  background: #f7f7f7;
  border-radius: 40rpx;
}

.icon-search {
  width: 40rpx;
  height: 40rpx;
  padding: 0 10rpx;
  opacity: 0.5;
}

.icon-voice {
  width: 30rpx;
  height: 40rpx;
  padding: 0 10rpx;
  opacity: 0.5;
}


.search-box input {
  flex: 1;
  padding: 10rpx;
  font-size: 28rpx;
  color: #999;
}

.nav-icons {
  display: flex;
  gap: 20rpx;
}

/* 分类导航样式 */
.category-nav {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  gap: 15rpx;
}

.category-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 15rpx;
  background: #f8f9fe;
  border-radius: 12rpx;
}

.category-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
  opacity: 0.8;
}

.category-item text {
  font-size: 24rpx;
  color: #6687ff;
  font-weight: 500;
}

/* 贡献提示样式 */
.contribution-banner {
  margin: 20rpx;
  padding: 20rpx 30rpx;
  background: #f8f9fe;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.contribution-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

/* 推荐区域样式 */
.section {
  margin: 40rpx 20rpx 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 25rpx;
  color: #333;
}

.recommend-grid {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.recommend-item {
  flex: 1;
  background: #f8f9fe;
  padding: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: flex-start;
}

.recommend-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
  opacity: 0.7;
}

/* 为 group 图标单独设置样式 */
.recommend-icon[src*="group"] {
  width: 48rpx;  /* 稍微加宽 */
  height: 40rpx;
}

.recommend-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recommend-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.recommend-count {
  font-size: 26rpx;
  color: #999;
}

/* 热点新闻样式 */
.news-list .news-item {
  margin-bottom: 25rpx;
}

.news-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.news-tag {
  color: #6687ff;
  font-size: 24rpx;
  margin-top: 12rpx;
  display: block;
}

/* 热榜样式 */
.hot-list .hot-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.hot-rank {
  width: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
  font-size: 32rpx;
}

.hot-title {
  flex: 1;
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.hot-count {
  font-size: 24rpx;
  color: #999;
}

.hot-tag {
  color: #ff6b6b;
  font-size: 24rpx;
  margin-left: 15rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.view-more {
  font-size: 26rpx;
  color: #6687ff;
}

.refresh-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.tab-item.active {
  color: #07c160;
}